{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Flash (STM32 Programmer)",
			"command": "/Applications/STMicroelectronics/STM32Cube/STM32CubeProgrammer/STM32CubeProgrammer.app/Contents/MacOs/bin/STM32_Programmer_CLI",
			"args": [
				"-c", "port=SWD", "freq=50", "mode=HOTPLUG", "reset=Crst",
				"-w", "build/program.elf",
				"-v",
				"-rst"
			],
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Flash EEPROM (STM32 Programmer)",
			"command": "/Applications/STMicroelectronics/STM32Cube/STM32CubeProgrammer/STM32CubeProgrammer.app/Contents/MacOs/bin/STM32_Programmer_CLI",
			"args": [
				"-c", "port=SWD", "freq=1000",
				"--skipErase",
				"-w", "build/eeprom.hex",
				"-v"
			],
			"problemMatcher": []
		}
	]
}